<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".SettingsActivity"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/backgroundText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/background"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/background1"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/backgroundText"
        android:layout_alignStart="@+id/backgroundText"
        android:layout_below="@+id/backgroundText"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/backgroundId"
        android:src="@drawable/select_back1" />

    <ImageButton
        android:id="@+id/background2"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_above="@+id/charText"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_toEndOf="@+id/background1"
        android:layout_toRightOf="@+id/background1"
        android:contentDescription="@string/backgroundId"
        android:src="@drawable/select_back2" />

    <ImageButton
        android:id="@+id/background3"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/background2"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_toEndOf="@+id/background2"
        android:layout_toRightOf="@+id/background2"
        android:contentDescription="@string/backgroundId"
        android:src="@drawable/select_back3" />

    <ImageButton
        android:id="@+id/background4"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/background3"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_toEndOf="@+id/background3"
        android:layout_toRightOf="@+id/background3"
        android:contentDescription="@string/backgroundId"
        android:src="@drawable/select_back4" />

    <TextView
        android:id="@+id/charText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/background1"
        android:layout_alignStart="@+id/background1"
        android:layout_below="@+id/background1"
        android:layout_marginTop="40dp"
        android:text="@string/character"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/character1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/charText"
        android:layout_alignStart="@+id/charText"
        android:layout_below="@+id/charText"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/backgroundId"
        android:src="@drawable/boy" />

    <ImageButton
        android:id="@+id/character2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/background2"
        android:layout_alignStart="@+id/background2"
        android:layout_alignTop="@+id/character1"
        android:background="@android:color/transparent"
        android:contentDescription="@string/backgroundId"
        android:src="@drawable/girl" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/character2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/backgroundId"
        android:src="@drawable/back" />


</RelativeLayout>